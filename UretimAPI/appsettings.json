{
  "ConnectionStrings": {
    "DefaultConnection": "Server=ARIFK\\SQLEXPRESS;Database=UretimDB;Trusted_Connection=true;MultipleActiveResultSets=true;TrustServerCertificate=true;Pooling=true;Min Pool Size=5;Max Pool Size=50;Connection Lifetime=300;Command Timeout=60"
  },
  "ApiSettings": {
    "DefaultPageSize": 50,
    "MaxPageSize": 200,
    "BulkOperationLimit": 250,
    "EnableDetailedErrors": true,
    "CacheExpirationMinutes": 10,
    "AllowedOrigins": [ "http://localhost:3000", "https://localhost:3000", "file://", "app://", "capacitor://localhost", "ionic://localhost" ],
    "DailyEntryLimit": 2000,
    "DailyQueryLimit": 2000,
    "EnableQueryThrottling": true,
    "QueryThrottleWindowMinutes": 15,
    "MaxConcurrentUsers": 20,
    "RequestTimeoutSeconds": 30
  },
  "DatabaseSettings": {
    "CommandTimeoutSeconds": 60,
    "EnableSensitiveDataLogging": false,
    "EnableDetailedErrors": true,
    "MaxRetryCount": 5,
    "MaxRetryDelay": 60,
    "ConnectionPoolMaxSize": 50,
    "ConnectionPoolMinSize": 5,
    "QueryCacheSize": 500,
    "BulkInsertBatchSize": 100,
    "MaxDegreeOfParallelism": 4
  },
  "PerformanceSettings": {
    "MaxConcurrentRequests": 100,
    "DatabaseConnectionPoolSize": 50,
    "EnableResponseCompression": true,
    "EnableOutputCaching": true,
    "OutputCacheDurationSeconds": 600,
    "MemoryCacheSizeLimitMB": 512,
    "EnableQueryOptimization": true,
    "MaxRequestsPerMinute": 120,
    "MaxBulkOperationsPerHour": 20,
    "RateLimitWindowMinutes": 1
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.File", "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.EntityFrameworkCore.Database.Command": "Error",
        "Microsoft.AspNetCore": "Warning",
        "System": "Warning",
        "UretimAPI.Controllers": "Information",
        "UretimAPI.Services": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/uretim-api-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 15,
          "fileSizeLimitBytes": 104857600,
          "rollOnFileSizeLimit": true,
          "shared": true,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff} [{Level:u3}] {SourceContext} {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Error"
    }
  },
  "AllowedHosts": "*"
}
